<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<InvariantGlobalization>true</InvariantGlobalization>
		<PublishSingleFile>true</PublishSingleFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<DebugSymbols>false</DebugSymbols>
		<DebugType>None</DebugType>
	</PropertyGroup>

	<PropertyGroup>
		<IsWindows Condition="$([MSBuild]::IsOSPlatform('Windows'))">true</IsWindows>
		<IsLinux Condition="$([MSBuild]::IsOSPlatform('Linux'))">true</IsLinux>
		
		<Is_x86_64 Condition=" '$(PROCESSOR_ARCHITECTURE)' == 'AMD64' or '$(PROCESSOR_ARCHITEW6432)' == 'AMD64' or '$(HostArchitecture)' == 'x64' ">true</Is_x86_64>
		<Is_x86_32 Condition=" '$(PROCESSOR_ARCHITECTURE)' == 'x86' and '$(PROCESSOR_ARCHITEW6432)' == '' ">true</Is_x86_32>
	</PropertyGroup>

	<Target Name="TestMessage" AfterTargets="Build" >
		<Message Text="IsWindows=$(IsWindows)" Importance="high" />
		<Message Text="IsLinux=$(IsLinux)" Importance="high" />
		<Message Text="Is_x86_64=$(Is_x86_64)" Importance="high" />
		<Message Text="Is_x86_32=$(Is_x86_32)" Importance="high" />
	</Target>

	<ItemGroup>
		<!-- Windows -->
		
		<Content Include="Libraries/SDL2/Win_x86_64/SDL2.dll" Condition="'$(IsWindows)' == 'true' and '$(Is_x86_64)' == 'true'">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>SDL2.dll</Link>
		</Content>
		
		<Content Include="Libraries/SDL2/Win_x86_64/SDL2_mixer.dll" Condition="'$(IsWindows)' == 'true' and '$(Is_x86_64)' == 'true'">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>SDL2_mixer.dll</Link>
		</Content>
		
		<Content Include="Libraries/SDL2/Win_x86_32/SDL2.dll" Condition="'$(IsWindows)' == 'true' and '$(Is_x86_32)' == 'true'">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>SDL2.dll</Link>
		</Content>
		
		<Content Include="Libraries/SDL2/Win_x86_32/SDL2_mixer.dll" Condition="'$(IsWindows)' == 'true' and '$(Is_x86_32)' == 'true'">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>SDL2_mixer.dll</Link>
		</Content>

		<!-- Linux -->

		<Content Include="Libraries/SDL2/Linux_x86_64/SDL2.so" Condition="'$(IsLinux)' == 'true' and '$(Is_x86_64)' == 'true'">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>SDL2.so</Link>
		</Content>
		
		<Content Include="Libraries/SDL2/Linux_x86_64/SDL2_mixer.so" Condition="'$(IsLinux)' == 'true' and '$(Is_x86_64)' == 'true'">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>SDL2_mixer.so</Link>
		</Content>
		
		<Content Include="Libraries/SDL2/Linux_x86_32/SDL2.so" Condition="'$(IsLinux)' == 'true' and '$(Is_x86_32)' == 'true'">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>SDL2.so</Link>
		</Content>
		
		<Content Include="Libraries/SDL2/Linux_x86_32/SDL2_mixer.so" Condition="'$(IsLinux)' == 'true' and '$(Is_x86_32)' == 'true'">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>SDL2_mixer.so</Link>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
		<PackageReference Include="OpenTK" Version="4.8.2" />
		<PackageReference Include="SixLabors.ImageSharp" Version="3.1.4" />
		<PackageReference Include="SkiaSharp" Version="2.88.8" />
		<PackageReference Include="SkiaSharp.NativeAssets.Linux" Version="2.88.8" />
	</ItemGroup>

</Project>